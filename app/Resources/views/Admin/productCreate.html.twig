{% extends 'Admin/base.html.twig' %}
{% block content %}
    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Информация о товаре</div>

            <div class="panel-options">
                <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
            </div>
        </div>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.title) }}
                </div>
            <div class="form-group">
                {{ form_label(form.brand, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.brand) }}
            </div>
            <div class="form-group">
                {{ form_label(form.category, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.category) }}
            </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </div>
            {{ form_rest(form) }}
        </div>
    </div>
{%  endblock %}